<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.airbamin.desktop.ui.LoginController"
            prefWidth="600" prefHeight="400">

    <children>
        <VBox spacing="18"
              alignment="CENTER"
              AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
              AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">

            <padding>
                <Insets top="32" right="32" bottom="32" left="32"/>
            </padding>

            <Label text="%login.title"
                   style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
            <Label text="%login.subtitle"
                   styleClass="subtext"/>

            <VBox spacing="12" maxWidth="360">
                <TextField fx:id="emailField"
                           promptText="%login.email"
                           prefWidth="360"/>
                <PasswordField fx:id="passwordField"
                               promptText="%login.password"
                               prefWidth="360"/>
                <TextField fx:id="deviceIdField"
                           promptText="%login.device_id"
                           prefWidth="360"/>
            </VBox>

            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="signInButton"
                        text="%login.btn.signin"
                        prefWidth="160"
                        onAction="#onSignIn"
                        styleClass="primary-button"/>
                <Button text="%login.btn.activation"
                        onAction="#onUseActivation"
                        styleClass="ghost-button"/>
            </HBox>

            <Label fx:id="statusLabel"
                   textFill="red"/>
        </VBox>
    </children>
</AnchorPane>
