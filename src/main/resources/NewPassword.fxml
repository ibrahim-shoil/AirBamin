<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.airbamin.desktop.ui.NewPasswordController"
            prefWidth="600" prefHeight="400">

    <children>
        <VBox spacing="18"
              alignment="CENTER"
              AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
              AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">

            <padding>
                <Insets top="32" right="32" bottom="32" left="32"/>
            </padding>

            <Label text="%newpassword.title"
                   style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
            <Label text="%newpassword.subtitle"
                   styleClass="subtext"/>

            <VBox spacing="12" maxWidth="360">
                <PasswordField fx:id="passwordField"
                               promptText="%newpassword.new_password"
                               prefWidth="360"/>
                <PasswordField fx:id="confirmPasswordField"
                               promptText="%signup.confirm_password"
                               prefWidth="360"/>
            </VBox>

            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="resetButton"
                        text="%newpassword.btn.reset"
                        prefWidth="180"
                        onAction="#onResetPassword"
                        styleClass="primary-button"/>
            </HBox>

            <Label fx:id="statusLabel"
                   textFill="red"/>
        </VBox>
    </children>
</AnchorPane>
