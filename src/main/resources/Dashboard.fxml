<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import java.net.URL?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.airbamin.desktop.ui.DashboardController"
            prefWidth="900" prefHeight="650">



    <top>
        <fx:include source="components/AppHeader.fxml"/>
    </top>

    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" styleClass="page-scroll">
            <content>
                <VBox alignment="TOP_CENTER" spacing="20" styleClass="page">

                    <VBox alignment="CENTER_LEFT" spacing="8" maxWidth="980">
                        <Label text="%dashboard.title" styleClass="section-title"/>
                        <Label text="%dashboard.subtitle"
                               wrapText="true"
                               styleClass="body-text"/>
                        <HBox spacing="10">
                            <Label fx:id="statusBadge"
                                   text="%dashboard.status"
                                   styleClass="status-badge"/>
                        </HBox>
                    </VBox>

                    <VBox spacing="14" maxWidth="980">
                        <VBox styleClass="card" spacing="14">
                            <Label text="%dashboard.account.title" styleClass="card-title"/>

                            <GridPane hgap="25" vgap="10">

                                <Label text="%dashboard.account.email"
                                       styleClass="body-text"
                                       GridPane.rowIndex="0"
                                       GridPane.columnIndex="0"/>
                                <Label fx:id="emailLabel"
                                       styleClass="card-body"
                                       GridPane.rowIndex="0"
                                       GridPane.columnIndex="1"/>

                                <Label text="%dashboard.account.plan"
                                       styleClass="body-text"
                                       GridPane.rowIndex="1"
                                       GridPane.columnIndex="0"/>
                                <Label fx:id="planLabel"
                                       styleClass="card-body"
                                       GridPane.rowIndex="1"
                                       GridPane.columnIndex="1"/>

                                <Label text="%dashboard.account.days"
                                       styleClass="body-text"
                                       GridPane.rowIndex="2"
                                       GridPane.columnIndex="0"/>
                                <Label fx:id="daysLabel"
                                       styleClass="card-body"
                                       GridPane.rowIndex="2"
                                       GridPane.columnIndex="1"/>

                                <Label text="%dashboard.account.expiry"
                                       styleClass="body-text"
                                       GridPane.rowIndex="3"
                                       GridPane.columnIndex="0"/>
                                <Label fx:id="expiryLabel"
                                       styleClass="card-body"
                                       GridPane.rowIndex="3"
                                       GridPane.columnIndex="1"/>
                            </GridPane>
                        </VBox>

                        <VBox styleClass="card" spacing="14">
                            <Label text="%dashboard.features.title" styleClass="card-title"/>
                            <HBox spacing="10" fx:id="featuresBox"/>
                        </VBox>

                        <VBox styleClass="card" spacing="14">
                            <Label text="%dashboard.device.title" styleClass="card-title"/>

                            <GridPane hgap="25" vgap="10">
                                <Label text="%dashboard.device.id"
                                       styleClass="body-text"
                                       GridPane.rowIndex="0"
                                       GridPane.columnIndex="0"/>
                                <Label fx:id="deviceIdLabel"
                                       styleClass="card-body"
                                       GridPane.rowIndex="0"
                                       GridPane.columnIndex="1"/>
                            </GridPane>
                        </VBox>
                    </VBox>

                    <HBox spacing="12" maxWidth="980">
                        <Button text="%dashboard.btn.refresh"
                                styleClass="secondary-button"
                                onAction="#onRefresh"/>

                        <Button text="%dashboard.btn.transfer"
                                styleClass="secondary-button"
                                onAction="#openTransfer"/>

                        <Button text="%dashboard.btn.settings"
                                styleClass="secondary-button"
                                onAction="#openSettings"/>

                        <Button fx:id="signOutButton"
                                text="%dashboard.btn.signout"
                                styleClass="secondary-button"
                                onAction="#onSignOut"
                                visible="false" managed="false"/>

                        <Button text="%dashboard.contact"
                                styleClass="secondary-button"
                                onAction="#onContact"/>
                    </HBox>

                </VBox>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
